@model E_Commerce.Models.Product
@{
    ViewData["Title"] = "Detail Produk";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Detail Produk</h2>
    <a class="btn btn-outline-secondary" asp-action="Index">Kembali</a>
</div>

<div class="card shadow-sm">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name" onerror="this.src='https://via.placeholder.com/400x300?text=Produk';" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                <p class="card-text">@Model.Description</p>
                <p class="card-text fw-semibold">Harga: @Model.Price.ToString("C0")</p>
                <p class="card-text">Stock: @Model.Stock</p>
                <div class="d-flex gap-2 mt-3">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Hapus</a>
                </div>
            </div>
        </div>
    </div>
</div>
