@model E_Commerce.Models.Product

<div class="card h-100 shadow-sm">
    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" onerror="this.src='https://via.placeholder.com/400x260?text=Produk';" />
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text text-muted flex-grow-1">@Model.Description</p>
        <div class="d-flex justify-content-between align-items-center mt-2">
            <div class="fw-semibold">@Model.Price.ToString("C0")</div>
            <small class="text-muted">Stock: @Model.Stock</small>
        </div>
        <form class="mt-3" asp-controller="Catalog" asp-action="AddToCart" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="input-group">
                <input type="number" class="form-control" name="qty" value="1" min="1" />
                <button class="btn btn-primary" type="submit">Tambah</button>
            </div>
            @Html.AntiForgeryToken()
        </form>
    </div>
</div>
