@model E_Commerce.Models.CartViewModel
@{
    ViewData["Title"] = "Keranjang";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Keranjang Belanja</h2>
    <a class="btn btn-outline-secondary" asp-action="Index">‚Üê Kembali ke katalog</a>
</div>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">Keranjang kosong. Mulai belanja di katalog.</div>
}
else
{
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Produk</th>
                    <th class="text-center">Qty</th>
                    <th class="text-end">Harga</th>
                    <th class="text-end">Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <form asp-action="Decrease" method="post">
                                    <input type="hidden" name="id" value="@item.ProductId" />
                                    <input type="hidden" name="qty" value="1" />
                                    <button class="btn btn-sm btn-outline-secondary">-</button>
                                    @Html.AntiForgeryToken()
                                </form>
                                <span class="px-3">@item.Quantity</span>
                                <form asp-action="AddToCart" method="post">
                                    <input type="hidden" name="id" value="@item.ProductId" />
                                    <input type="hidden" name="qty" value="1" />
                                    <button class="btn btn-sm btn-outline-secondary">+</button>
                                    @Html.AntiForgeryToken()
                                </form>
                            </div>
                        </td>
                        <td class="text-end">@item.Price.ToString("C0")</td>
                        <td class="text-end">@item.Subtotal.ToString("C0")</td>
                        <td class="text-end">
                            <form asp-action="Remove" method="post">
                                <input type="hidden" name="id" value="@item.ProductId" />
                                <button class="btn btn-sm btn-outline-danger">Hapus</button>
                                @Html.AntiForgeryToken()
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <h4>Total: @Model.Total.ToString("C0")</h4>
        <div class="d-flex gap-2">
            <form asp-action="Clear" method="post">
                <button class="btn btn-outline-secondary">Kosongkan</button>
                @Html.AntiForgeryToken()
            </form>
            <button class="btn btn-success" disabled>Checkout (demo)</button>
        </div>
    </div>
}
