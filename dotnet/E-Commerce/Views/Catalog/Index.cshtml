@model IEnumerable<E_Commerce.Models.Product>
@{
    ViewData["Title"] = "Katalog Produk";
}

<div class="bg-light p-4 rounded mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
        <div>
            <h2 class="mb-1">Katalog Produk</h2>
            <p class="text-muted mb-0">Belanja tanpa login, tambahkan ke keranjang.</p>
        </div>
        <a class="btn btn-outline-primary" asp-action="Cart">Lihat Keranjang</a>
    </div>
</div>

<div class="row g-3">
    @foreach (var product in Model)
    {
        <div class="col-md-4 col-sm-6">
            <partial name="_ProductCard" model="product" />
        </div>
    }
</div>
