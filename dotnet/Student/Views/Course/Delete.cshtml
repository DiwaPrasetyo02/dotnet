@model WebAppMVC.Models.Course
@{
    ViewData["Title"] = "Hapus Course";
}

<h2>Hapus Course</h2>
<h3>Apakah Anda yakin ingin menghapus course ini?</h3>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Mata Kuliah</dt>
        <dd class="col-sm-10">@Model.MataKuliah</dd>

        <dt class="col-sm-2">Dosen Pengampu</dt>
        <dd class="col-sm-10">@Model.DosenPengampu</dd>

        <dt class="col-sm-2">Siswa</dt>
        <dd class="col-sm-10">@Model.Student?.Name</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Hapus" class="btn btn-danger" /> |
        <a asp-action="Index">Kembali</a>
    </form>
</div>

