@model WebAppMVC.Models.Attendence

@{
    ViewData["Title"] = "Detail Absensi";
}

<h2>Detail Absensi</h2>

<div>
    <h4>Absensi</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Participants Id</dt>
        <dd class="col-sm-10">@Model.Participants_Id</dd>

        <dt class="col-sm-2">Tanggal</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd-MM-yyyy")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Catatan</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-participantsId="@Model.Participants_Id">Edit</a> |
    <a asp-action="Index">Kembali ke Daftar</a>
</div>

